<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    android:backgroundTint="@color/darkblue"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Icono del medicamento -->
        <ImageView
            android:id="@+id/imgIconoMedicamento"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_medicamento"
            android:layout_marginEnd="16dp"
            android:contentDescription="Icono medicamento" />

        <!-- Información textual -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtNombreMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del medicamento"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtFrecuenciaMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 veces al día"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtHorasMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horas: 08:00, 12:00"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtDiasMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Durante X días"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />


            <TextView
                android:id="@+id/txtCapsulasRestantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Te quedan 20 cápsulas"
                android:textSize="15sp"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

