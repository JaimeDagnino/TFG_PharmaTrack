<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/beige">

    <!-- 1) Encabezado con la fecha completa -->
    <TextView
        android:id="@+id/tvFechaHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Viernes 6 de junio de 2025"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/brand_primary"
        android:layout_marginBottom="12dp" />

    <!-- 2) MaterialCalendarView corregido -->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="none"
        app:mcv_weekDayTextAppearance="@style/CalendarWeekDayLargeBrand"
        app:mcv_dateTextAppearance="@style/CalendarDateLargeBrand"
        />
</LinearLayout>








